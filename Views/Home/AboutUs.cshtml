        .container {
            max-width: 600px;
            max-height: 350px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

            .container:hover img {
                opacity: 0.3;
            }

            .container img:hover {
                transform: perspective(800px) rotateY(0deg);
                opacity: 1;
            }
    </style>
</head>

