@model OtoGaleri.Data.DataModel.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}
<head>
    <link href="~/Content-UI/css/table.css" rel="stylesheet" />
</head>
<div style="z-index:0;margin-top:150px" class="table-wrapper">
    <form action="/Model/Create">
        <button class="btn btn-primary">Yeni Oluştur</button>
    </form>
    <table class="fl-table">
        <thead>
            <tr>
                <th>Kategori</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Renk</th>
                <th>Yakıt</th>
                <th>Vites</th>
                <th>Motor</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.Models)
                {
                <tr>
                    <td>@item.Brand.Category.category_name</td>
                    <td>@item.Brand.brand_name</td>
                    <td>@item.model_name</td>
                    <td>@item.Color.color_name</td>
                    <td>@item.FuelOption.fueloption_name</td>
                    <td>@item.GearOption.gearoption_name</td>
                    <td>@item.MotorOption.motoroption_name</td>
                    <td>@item.model_price.ToString("C0")</td>
                </tr>
                }
            }

<tbody>
    </table>
</div>
